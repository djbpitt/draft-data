                    <placeName xml:id="name2580-3" xml:lang="en" source="#bib2580-2">the church of the Christians</placeName>
                    <desc xml:id="abstract-en-2580" xml:lang="en"/>
                    <desc xml:lang="en">
                        <quote source="#bib2580-3">The 'Church of the Christians', destroyed in the floods of 201, must have lain on low ground, probably on the site of the present Makam Ibrahim.</quote>
                    </desc>
                    <event when="0201-11" syriaca-computed-start="0201-11-01" syriaca-computed-end="0201-11-30" source="#bib2580-1 #bib2580-2 #bib2580-3">
