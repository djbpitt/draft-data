               <persName xml:id="name320-10" xml:lang="fr-x-fiey" source="#bibl320-1">ABRAHAM DE KAŜKAR</persName>
               <idno type="URI">http://syriaca.org/person/320</idno>
               <idno type="FIEY">23</idno>
               <idno type="FIEY">23</idno>
